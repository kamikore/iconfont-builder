{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES5",
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "outDir": "./dist",
        "declaration": true,
        "removeComments": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/"]
        }
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}