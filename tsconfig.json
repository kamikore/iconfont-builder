{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES5",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "declaration": true,
        "removeComments": true,
        "sourceMap": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/"]
        },
        // "esModuleInterop": true         // 不添加 import fs from 'fs' 会报错, error TS2305: Module '"fs"' has no exported member 'fs'.
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}